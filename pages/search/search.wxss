/* miniprogram/pages/search/search.wxss */
.container{
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;
  padding-top: 20px;
  padding-bottom: 20px;
  border-bottom:1px solid #e6c7a1;
}
.poem_name{
  color: #C68739;
  font-size: 16px;
  font-weight: bold
}
.poem_content{
  color: gray;
  font-size: 14px;
  overflow:hidden;/*只显示三行*/
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3;
}
navigator{
  width: 100%
}
.tips{
  margin: 20px;
  width: 100%;
  color: gray;
  font-size: 12px;
  text-align: right
}

.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.log-item {
  margin: 10rpx;
}
.poembox{
  position: relative;
  text-align: center;
}
.title{
  font-size: 50rpx;
}
.auth{
  font-size: 40rpx;
  margin-left: 20rpx;
  color: rgba(0,0,0, .7)
}
.body{
  color:rgba(0,0,0, .9);
  margin: 20rpx auto 40rpx;
  text-align: left;
  text-indent: 100rpx;
}
.speaker{
  position: absolute;
  top: 65rpx;
  left: 0;
  width: 80rpx;
  height: 80rpx;
}
