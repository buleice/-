<!--miniprogram/pages/sort/sort.wxml-->
<view class='search_container'>
  <icon type='search'></icon>
  <input type='text' placeholder='请输入作者或朝代进行搜索' confirm-type='search' bindconfirm='onSearchConfirm' value='{{search}}'></input>
  <text class='search_cancel' bindtap='onCancelBtnClcik'>取消</text>
</view>
<view class='tag_container'>
  <!-- <navigator url='/pages/authors/authors' hidden="{{!loadingHidden}}"><button class='tag_item' >作者</button></navigator > -->
  <navigator url='/pages/logs/logs' hidden="{{!loadingHidden}}"><button class='tag_item' >全部</button></navigator >
  <view wx:for="{{tags}}" wx:key="unique" data-name='{{item.name}}' bindtap='Onserach' ><button class='tag_item' id='{{item.objectId}}'>{{item.name}}</button></view >
</view>

<loading hidden="{{loadingHidden}}">
        加载中...
</loading>